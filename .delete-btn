body {
  font-family: Arial, sans-serif;
  margin: 20px;
  background-color: #f8f8f8;
}
h1 {
  text-align: center;
}
form {
  max-width: 500px;
  margin: 0 auto 30px;
  background: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
input {
  width: 100%;
  margin: 5px 0 10px;
  padding: 10px;
  font-size: 16px;
}
button {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  background-color: #007bff;
  color: white;
  border: none;
  cursor: pointer;
}
button:hover {
  background-color: #0056b3;
}
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
  gap: 15px;
  max-width: 800px;
  margin: 0 auto 30px;
}
